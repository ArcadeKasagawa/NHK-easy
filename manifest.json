{
    "name": "nhkeasy",
    "version": "0.0.0.1",
    "manifest_version": 3,
    "description": "An extension to xxx",
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "action": {
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-scripts/content.js"
            ]
        }
    ],
    "permissions": [
        "storage"
    ]
}